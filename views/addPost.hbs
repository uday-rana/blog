<h2>Add Post</h2>
<form action="/posts/add" method="post" enctype="multipart/form-data">
	<fieldset class="mb-3">
		<legend>Feature Image</legend>
		<input type="file" name="featureImage" id="featureImage" class="form-control" />
	</fieldset>
	<fieldset class="mb-3">
		<legend>Post Content</legend>
		<div class="mb-3">
			<label for="title" class="form-label">Title</label>
			<input type="text" id="title" name="title" class="form-control" />
		</div>
		<div class="mb-3">
			<label for="body" class="form-label">Body</label>
			<textarea name="body" id="body" class="form-control" rows="6"></textarea>
		</div>
		<div class="mb-3 row row-cols-2">
			<div class="col">
				{{#if categories}}
					<label for="category" class="form-label">Category</label>
					<select name="category" id="category" class="form-select">
						{{#each categories}}
							<option value="{{dataValues.id}}">{{dataValues.category}}</option>
						{{/each}}
					</select>
				{{else}}
					<div class="my-3">No Categories</div>
				{{/if}}
			</div>
			<div class="col">
				<label class="form-label">Visibility</label>
				<div class="form-check">
					<input type="checkbox" class="form-check-input" role="switch" name="published" id="published" />
					<label for="published" class="form-check-label">Published</label>
				</div>
			</div>
		</div>
	</fieldset>
	<button type="submit" class="btn btn-success float-end">Add Post</button>
</form>