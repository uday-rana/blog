<div class="flex flex-wrap justify-center gap-4">
	<!--Posts, Pagination-->
	<div class="flex flex-col items-center gap-4 sm:basis-4/5 max-w-screen-md">
		{{#each data.currPosts}}
			<div class="card shadow-xl">
				{{#if dataValues.featureImage}}
					<figure>
						<img src="{{dataValues.featureImage}}" alt="Featured image" class="object-cover" />
					</figure>
				{{/if}}
				<div class="card-body prose">
					<h2 class="card-title">{{#safeHTML dataValues.title}}{{/safeHTML}}</h2>
					<p>{{#safeHTML dataValues.body}}{{/safeHTML}}</p>
					<ul>
						<li>
							Category: <a href="/blog?category={{dataValues.category.id}}">{{dataValues.category.category}}</a>
						</li>
						<li>Last Updated: {{#formatDate dataValues.postDate}}{{/formatDate}}</li>
					</ul>
				</div>
			</div>
		{{else}}
			<div class="card shadow-xl">
				<div class="card-body prose">
					<h2 class="card-title">No posts found!</h2>
					<p>{{data.noPostsMessage}}</p>
				</div>
			</div>
		{{/each}}
