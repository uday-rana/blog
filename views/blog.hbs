					{{/if}}
				</p>
				{{#if data.post}}
					<ul>
						<li>Category: <a
								href="/blog?category={{data.post.dataValues.category.id}}">{{data.post.dataValues.category.category}}</a>
						</li>
						<li>Last Updated: {{#formatDate data.post.dataValues.postDate}}{{/formatDate}}</li>
					</ul>
				{{/if}}
			</div>
		</div>
		-->
		{{#if data.showPagination}}
		<div class="join">
			{{#if data.showPrevPageBtn}}
				<a href="/blog?page={{data.prevPage}}"><button class="join-item btn">«</button></a>
			{{/if}}
			<button class="join-item btn">Page {{data.currPage}}</button>
			{{#if data.showNextPageBtn}}
			<a href="/blog?page={{data.nextPage}}"><button class="join-item btn">»</button></a>
			{{/if}}
		</div>
		{{/if}}
	</div>
	<!--Posts List, Categories List-->
	<div class="flex sm:basis-1/5 sm:flex-col">
		{{#if data.allPosts}}
			<ul class="menu rounded-box">
				<li class="menu-title">Posts</li>
				{{#each data.allPosts}}
					<li>
						{{#if ../viewingCategory}}
						<a href="/blog/{{dataValues.id}}?category={{../viewingCategory}}">{{dataValues.title}}</a>
						{{else}}
						<a href="/blog/{{dataValues.id}}">{{dataValues.title}}</a>
						{{/if}}
					</li>
				{{/each}}
			</ul>
		{{/if}}
		{{#if data.categories}}
			<ul class="menu rounded-box">
				<li class="menu-title">Categories</li>
				{{#each data.categories}}
					<li>
						{{#categoryLink this}}{{/categoryLink}}
					</li>
				{{/each}}
			</ul>
		{{/if}}
	</div>
</div>