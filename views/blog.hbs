<div class="flex flex-wrap justify-center gap-4">
	<div class="card sm:basis-2/3 max-w-screen-md shadow-xl">
		{{#if data.post}}
			{{#if data.post.dataValues.featureImage}}
				<figure><img src="{{data.post.dataValues.featureImage}}" alt="Featured image" class="object-cover" />
				</figure>
			{{/if}}
		{{/if}}
		<div class="card-body prose">
			<h2 class="card-title">
				{{#if data.post}}
					{{#safeHTML data.post.dataValues.title}}{{/safeHTML}}
				{{else}}No posts found!
				{{/if}}
			</h2>
			<p>
				{{#if data.post}}
					{{#safeHTML data.post.dataValues.body}}{{/safeHTML}}
				{{else}}{{data.message}}
				{{/if}}
			</p>
			{{#if data.post}}
				<ul>
					<li>Category: <a
							href="/blog?category={{data.post.dataValues.category.id}}">{{data.post.dataValues.category.category}}</a>
					</li>
					<li>Last Updated: {{#formatDate data.post.dataValues.postDate}}{{/formatDate}}</li>
				</ul>
			{{/if}}
		</div>
	</div>
	<div class="flex flex-wrap sm:flex-col">
		{{#if data.posts}}
			<ul class="menu rounded-box">
				<li class="menu-title">Posts</li>
				{{#each data.posts}}
					<li>
						<a href="/blog/{{dataValues.id}}?category={{../viewingCategory}}"
							class="list-group-item">{{dataValues.title}}</a>
					</li>
				{{/each}}
			</ul>
		{{/if}}
		{{#if data.categories}}
			<ul class="menu rounded-box">
				<li class="menu-title">Categories</li>
				{{#each data.categories}}
					<li>{{#categoryLink this}}{{/categoryLink}}</li>
				{{/each}}
			</ul>
		{{/if}}
	</div>
</div>