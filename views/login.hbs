<div class="flex flex-wrap justify-center gap-4">
	{{#if errorMessage}}
	<div>{{errorMessage}}</div>
	{{/if}}
	<div class="prose">
		<h1>Log In</h1>
		<form action="/login" method="post">
			<div>
				<label for="userName" class="label">Username</label>
				<input type="text" name="userName" id="userName" placeholder="Username" {{#if userName}}value="{{userName}}"{{/if}} class="input input-bordered"/>
				<label for="password" class="label">Password</label>
				<input type="password" name="password" id="password" placeholder="Password" class="input input-bordered" required>
			</div>
			<button type="submit" class="btn mt-4">Log In</button>
		</form>
	</div>
</div>