<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Blog" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Uday Rana&apos;s Blog</title>
  </head>

  <body class="min-h-screen">
    <div class="navbar">
      <div class="flex-1">
        <a class="btn btn-ghost normal-case text-xl" href="/">Uday Rana</a>
      </div>
      {{!-- Dropdown for small screens --}}
      <div class="navbar-end sm:hidden">
        <ul class="menu menu-horizontal px-1">
          <li>
            <details class="dropdown dropdown-end">
              <summary>Menu</summary>
              <ul class="dropdown-content z-[1] p-2 shadow menu rounded-box w-40">
                <li><a href="/blog">Blog</a></li>
                <li><a href="/about">About</a></li>
                <div class="divider my-0"></div>
                {{#if session.user}}
                <li><a href="/posts">Posts</a></li>
                <li><a href="/categories">Categories</a></li>
                <li>
                  <details class="dropdown dropdown-end">
                    <summary>{{session.user.userName}}</summary>
                    <ul>
                      <li><a href="/loginHistory">Login History</a></li>
                      <li><a href="/logout">Log Out</a></li>
                    </ul>
                  </details>
                </li>
                {{else}}
                <li><a href="/register">Register</a></li>
                <li><a href="/login">Login</a></li>
                {{/if}}
              </ul>
            </details>
          </li>
        </ul>
      </div>

      {{!-- Horizontal menu for larger screens --}}
      <div class="navbar-end hidden sm:flex">
        <ul class="menu menu-horizontal px-1">
          {{#navLink "/blog"}}Blog{{/navLink}}
          {{#navLink "/about"}}About{{/navLink}}
          <div class="divider divider-horizontal mx-0"></div>
          {{#if session.user}}
          {{#navLink "/posts"}}Posts{{/navLink}}
          {{#navLink "/categories"}}Categories{{/navLink}}
          <li>
            <details class="dropdown dropdown-end">
              <summary>{{session.user.userName}}</summary>
              <ul class="dropdown-content z-[1] p-2 shadow menu rounded-box">
                {{#navLink "/loginHistory"}}Login History{{/navLink}}
                <li><a href="/logout">Log Out</a></li>
              </ul>
            </details>
          </li>
          {{else}}
          {{#navLink "/register"}}Register{{/navLink}}
          {{#navLink "/login"}}Login{{/navLink}}
          {{/if}}
        </ul>
      </div>
    </div>
    <div class="container mx-auto p-5">
      {{{body}}}
    </div>
    <footer class="footer sticky top-[100vh] p-10 bg-neutral text-neutral-content">
      <div><p1>Made by Uday Rana</p></div>
    </footer>
  </body>

</html>