<div class="prose mx-auto">
  <a href="/categories"><button class="btn mb-4">Back</button></a>
  <h1>Edit Category</h1>
  <form action="/categories/edit/{{data.id}}" method="post">
    <div>
      <label for="category" class="label">Category</label>
      <input
        type="text"
        name="category"
        id="category"
        class="input input-bordered w-full"
        placeholder="Category"
        value="{{data.category}}"
        autofocus
      />
    </div>
    <button type="submit" class="btn btn-success mt-4">Update Category</button>
  </form>
</div>